{
  "openapi": "3.0.0",
  "info": {
    "version": "v1.0.0",
    "title": "SoonunGift",
    "description": "Dev Environment"
  },
  "servers": [
    {
      "url": "http://localhost:1448",
      "description": "local server"
    },
    {
      "url": "https://soonungift-api.onrender.com/",
      "description": "dev server"
    }
  ],
  "paths": {
    "/api/auth/register": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Register",
        "description": "",
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterBody"
              }
            }
          }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Login",
        "description": "",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TokensResponse"
                }
              }
            }
          },
          "400": {
            "description": "Incorrect password or email!"
          },
          "404": {
            "description": "Invalid email or password!"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginBody"
              }
            }
          }
        }
      }
    },
    "/api/auth/refresh": {
      "get": {
        "tags": [
          "Auth"
        ],
        "summary": "Refresh Token",
        "description": "",
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TokensResponse"
                }
              }
            }
          },
          "403": {
            "description": "Forbidden"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "security": [
          {
            "bearerAuth": [],
            "cookieAuth": []
          }
        ]
      }
    },
    "/api/auth/delete_token": {
      "delete": {
        "tags": [
          "Auth"
        ],
        "summary": "Clear refresh token from cookies",
        "description": "",
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "security": [
          {
            "bearerAuth": [],
            "cookieAuth": []
          }
        ]
      }
    },
    "/api/users/": {
      "get": {
        "tags": [
          "Users"
        ],
        "summary": "Get List of Users",
        "description": "",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GetAllUsersRespone"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/api/users/aboutMe": {
      "get": {
        "tags": [
          "Users"
        ],
        "summary": "Get User Profile",
        "description": "",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GetUserProfileResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/api/users/{id}": {
      "put": {
        "tags": [
          "Users"
        ],
        "summary": "Update User Profile",
        "description": "",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "User id"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateUserProfileBody"
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "description": "Enter access token into the field without Bearer"
      },
      "cookieAuth": {
        "type": "apiKey",
        "in": "cookie",
        "name": "refresh_token",
        "description": "Enter refresh token into the field without Bearer"
      }
    },
    "schemas": {
      "RegisterBody": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "johndoe@gmail.com"
          },
          "fullname": {
            "type": "string",
            "example": "John Doe"
          },
          "password": {
            "type": "string",
            "example": "john_doe"
          }
        },
        "required": [
          "email",
          "fullname",
          "password"
        ]
      },
      "LoginBody": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "johndoe@gmail.com"
          },
          "password": {
            "type": "string",
            "example": "john_doe"
          }
        },
        "required": [
          "email",
          "password"
        ]
      },
      "UpdateUserProfileBody": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "sasai_kudasai@gmail.com"
          },
          "fullname": {
            "type": "string",
            "example": "trahni menya"
          }
        }
      },
      "TokensResponse": {
        "type": "object",
        "properties": {
          "accessToken": {
            "type": "string",
            "example": "string"
          },
          "refreshToken": {
            "type": "string",
            "example": "string"
          }
        }
      },
      "GetAllUsersRespone": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "email": {
              "type": "string",
              "example": "johndoe@gmail.com"
            },
            "fullname": {
              "type": "string",
              "example": "John Doe"
            },
            "password": {
              "type": "string",
              "example": "john_doe"
            },
            "createdAt": {
              "type": "string",
              "example": "2024-02-03T13:17:37.878Z"
            },
            "updatedAt": {
              "type": "string",
              "example": "2024-02-03T16:15:37.746Z"
            },
            "role": {
              "type": "string",
              "example": "USER"
            }
          }
        }
      },
      "GetUserProfileResponse": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "johndoe@gmail.com"
          },
          "fullname": {
            "type": "string",
            "example": "John Doe"
          },
          "password": {
            "type": "string",
            "example": "john_doe"
          },
          "createdAt": {
            "type": "string",
            "example": "2024-02-03T13:17:37.878Z"
          },
          "updatedAt": {
            "type": "string",
            "example": "2024-02-03T16:15:37.746Z"
          },
          "role": {
            "type": "string",
            "example": "USER"
          }
        }
      }
    }
  }
}